@model IEnumerable<MVC_Bartender_App.Models.Drink>
@{
    ViewData["Title"] = "Order Queue";
}
<h1><strong>@ViewData["Title"]</strong></h1>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @Html.ActionLink("Serve Drink", "AddToQueue", item)

            </td>
        </tr>
    }

</table>
